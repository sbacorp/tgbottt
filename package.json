{
  "name": "cbr-monitoring-bot",
  "version": "1.0.0",
  "description": "Telegram bot for monitoring illegal organizations from CBR",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "tsc && npm start",
    "dev:watch": "concurrently \"tsc --watch\" \"nodemon dist/bot.js\"",
    "init-admin": "node scripts/init-admin.js",
    "docker:build": "docker build -t cbr-monitoring-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "docker:dev": "docker-compose down && docker-compose up --build",
    "test:scrape": "node test-playwright-scrape.js",
    "playwright:auth": "ts-node scripts/save-kontur-state.ts",
    "migrate": "node scripts/run-migration.js",
    "migrate:rollback": "node scripts/run-migration.js rollback"
  },
  "keywords": [
    "telegram",
    "bot",
    "cbr",
    "monitoring",
    "organizations"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@grammyjs/conversations": "^2.1.0",
    "@grammyjs/menu": "^1.3.1",
    "@grammyjs/parse-mode": "^2.2.0",
    "@grammyjs/runner": "^2.0.3",
    "@supabase/supabase-js": "^2.46.1",
    "@types/pdf-parse": "^1.1.5",
    "dotenv": "^16.6.1",
    "grammy": "^1.21.1",
    "grammy-guard": "^0.5.0",
    "jimp": "^0.22.12",
    "node-cron": "^3.0.3",
    "openai": "^6.4.0",
    "pdf-parse": "^1.1.1",
    "playwright": "^1.55.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
