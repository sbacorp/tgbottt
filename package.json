{
  "name": "cbr-monitoring-bot",
  "version": "1.0.0",
  "description": "Telegram bot for monitoring illegal organizations from CBR",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "tsc && npm start",
    "dev:watch": "concurrently \"tsc --watch\" \"nodemon dist/bot.js\"",
    "init-db": "node scripts/init-db.js",
    "init-admin": "node scripts/init-admin.js",
    "docker:build": "docker build -t cbr-monitoring-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "docker:dev": "docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f cbr-bot-dev",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "test:playwright": "node test-playwright.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "cbr",
    "monitoring",
    "organizations"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@google-cloud/vision": "^5.3.3",
    "@grammyjs/conversations": "^2.1.0",
    "@grammyjs/hydrate": "^1.6.0",
    "@grammyjs/menu": "^1.3.1",
    "@grammyjs/parse-mode": "^2.2.0",
    "@grammyjs/runner": "^2.0.3",
    "@mendable/firecrawl-js": "^1.29.3",
    "axios": "^1.6.2",
    "dotenv": "^16.6.1",
    "grammy": "^1.21.1",
    "grammy-guard": "^0.5.0",
    "jimp": "^0.22.12",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "playwright": "^1.55.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
